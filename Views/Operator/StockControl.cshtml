
@{
    ViewBag.Title = "StockControl";
    Layout = "~/Views/Shared/_LayoutOperator.cshtml";
}



<h3>Warehouse Stock Management For Operator</h3>
@model IEnumerable<LogiManage.ViewModels.WarehouseProductViewModel>



<h2>WarehouseStocks</h2>
<table class="table" border="1">
    <thead>
        <tr>
            <th>ProductName</th>
            <th>Category</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Critical Stock Level</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.ProductName</td>
                <td>@product.Category</td>
                <td>@product.Price.ToString("C")</td>
                <td>@product.Quantity</td>
                <td>@product.CriticalStockLevel</td>
                <td>@Html.ActionLink("Diğer depolara bak", "OtherStockControl")</td>


            </tr>
        }
    </tbody>
</table>

<hr />