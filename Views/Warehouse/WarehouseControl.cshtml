@{
    ViewBag.Title = "Depodaki Ürünler";
    Layout = "~/Views/Shared/_LayoutWarehouseManager.cshtml";
}

<h2>Warehouse Stock Management</h2>
@model IEnumerable<LogiManage.ViewModels.WarehouseProductViewModel>



<h3>WarehouseStocks</h3>
<table border="1">
    <thead>
        <tr>
            <th>ProductName</th>
            <th>Category</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Critical Stock Level</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.ProductName</td>
                <td>@product.Category</td>
                <td>@product.Price.ToString("C")</td>
                <td>@product.Quantity</td>
                <td>@product.CriticalStockLevel</td>
                <td>@Html.ActionLink("Diğer depolara bak", "WarehouseSControl")</td>
                    
                
            </tr>
        }
    </tbody>
</table>

<hr />



