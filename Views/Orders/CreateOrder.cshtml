@{
    ViewBag.Title = "Create Order";
    Layout = "~/Views/Shared/_LayoutPurchasingOfficer.cshtml";
}

@model LogiManage.ViewModels.ViewOrderViewModel


<h2>Create Order</h2>

@using (Html.BeginForm("CreateOrder", "Orders", FormMethod.Get))
{
    <div class="form-group">
        <label>Kategori Seçiniz:</label>
        @Html.DropDownList("selectedCategory", ViewBag.CategoryList as SelectList, "-- Kategori Seçiniz --",
        new { @class = "form-control", onchange = "this.form.submit();" })
    </div>
}

@using (Html.BeginForm("CreateOrder", "Orders", FormMethod.Post))
{
    <div class="form-group">
        <label>Ürün Seçiniz:</label>
        @Html.DropDownListFor(m => m.ProductID, ViewBag.ProductList as SelectList, "-- Önce Kategori Seçin --", new { @class = "form-control" })
    </div>

    <div class="form-group">
        <label>Adet:</label>
        <input type="number" name="Quantity" class="form-control" required />
    </div>

    <div class="form-group">
        <label>Depo Seçiniz:</label>
        @Html.DropDownListFor(m => m.WarehouseID, ViewBag.WarehouseList as SelectList, "-- Depo Seçiniz --", new { @class = "form-control" })
    </div>

    <div class="form-group">
        <label>Tedarikçi Seçiniz:</label>
        @Html.DropDownListFor(m => m.SupplierID, ViewBag.SupplierList as SelectList, "-- Tedarikçi Seçiniz --", new { @class = "form-control" })
    </div>

    <button type="submit" class="btn btn-primary">Sipariş Oluştur</button>
}

